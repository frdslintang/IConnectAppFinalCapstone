<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
   card_view:strokeColor="@color/green_primary"
    card_view:strokeWidth="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <!-- Gambar -->
            <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:radius="50dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <!-- Judul Artikel -->
                <TextView
                    android:id="@+id/tv_item_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Article Title"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/green_primary"
                     />

                <!-- Deskripsi Artikel -->
                <TextView
                    android:id="@+id/tv_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="4"
                    android:text="This is a sample description for the article item. This is a sample description for the article item.This is a sample description for the article item. This is a sample description for the article item.This is a sample description for the article item. This is a sample description for the article item.This is a sample description for the article item. This is a sample description for the article item."
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>