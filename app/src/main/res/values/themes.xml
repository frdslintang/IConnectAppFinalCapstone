<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyIConnect" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your light theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:colorAccent">@color/grey</item>
        <item name="colorPrimaryVariant">@color/white</item>
    </style>

    <style name="splashScreenThemeLight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary</item>
        <item name="android:textColorPrimary">@color/green_primary</item>
        <item name="android:windowBackground">@color/green_primary</item>
        <item name="boxStrokeColor">@color/green_primary</item>
        <item name="android:navigationBarColor">@color/green_primary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/red_accent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/red_accent</item>

    </style>

    <style name="Theme.MyIConnect" parent="Base.Theme.MyIConnect" />
</resources>